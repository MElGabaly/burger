<img src="../assets/img/burger.png" class="rounded mx-auto d-block" alt="..." width="200" height="200" />

<form class="create-form">
  <div class="container"></div>
  <div class="row">
    <div class="col-6 d-flex justify-content-end p-0">
      <div class="form-group">
        <input type="text" id="ca" name="name" class="form-control" placeholder="Add Burger">
      </div>
    </div>
    <div class="col-6 d-flex justify-content-start p-0">
      <button type="submit" class="btn btn-success">Add Burger</button>
    </div>
  </div>
  </div>
  </div>
</form>

<div class="row">
  <div class="col-6">
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>